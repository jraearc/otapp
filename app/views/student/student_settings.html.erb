<%= render "layouts/usernavbar" %>
<header id="settings">
<div class="ui text container">
  <div class="title">
  <h1 class="header">Edit Settings</h1>
</div>
  <div class="ui divider"></div>
<form class="ui form">
    <div class="field">
    <label>Username</label>
    <input type="text" name="last-name" placeholder="" value=<%= @user_student.username %>>
  </div>
  <div class="field">
    <label>Email</label>
    <input type="text" name="last-name" placeholder="" value=<%= @user_student.e_mail %>>
  </div>
    <div class="field">
    <label>Name</label>
    <input type="text" name="last-name" placeholder="" value="<%= @user_student.name %>">
  </div>
  <div class="field">
    <label>Password</label>
    <input type="password" name="first-name" placeholder="type your current/new password here">
  </div>
  <button class="ui button green" type="submit">Save</button>
</form>
</div>
</div>