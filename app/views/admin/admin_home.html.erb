<!--My Applications (User)-->
<%= render "layouts/adminnavbar" %>
<header id="profile">



<div class="ui grid container">
    <div class="four wide column">
      <div class="ui card">
        <div class="image">
          <img src=<%=asset_path"school.jpg"%>>
        </div>
        <div class="content">
          <a class="header"><%= @school.sname %></a>
          <div class="description">
           <%= @school.email %>
           <br>
            <%= @school.address %>
            <br>
            <%= @school.phone %>
          </div>
        </div>
      </div>
    </div>


<div class="twelve wide column">
   <h1>Welcome <%= @school_admin.school_pos %>!</h1>
   <div class="ui divider"></div>
     <%= form_tag(admin_home_path, :method => "get", id: "search-form", class: "ui form") do %>
    <div class="field">
    <div class="ui action left icon input">
        <i class="search icon"></i>
        <%= text_field_tag :search, "", placeholder: "Search for ..."%>
         <%=  button_tag("Search", class: "ui button blue", type: "submit") %>
       
      </div>

    </div>
         
    <div class="inline fields">
        <div class="inline fields">
      <label for="fruit">Search by:</label>
      <div class="field">
        <div class="ui radio checkbox">
           <%= text_field_tag :radio, "", type:"radio", value:"name",tabindex:"0", class:"active", checked:"true"%>
        <%= label_tag(:"Applicants") %>
        </div>
      </div>
      <div class="field">
        <div class="ui radio checkbox">
          <%= text_field_tag :radio, "", type:"radio", value:"course",tabindex:"0", class:"hidden"%>
        <%= label_tag(:"Course") %>
        </div>
      </div>
    </div>
  </div>
<% end %>
    <div class="ui raised segments">
      <% @applicants.each do |app|%>
      <div class="ui padded segment">
        <div class="ui header"> <a href=<%=admin_app_profile_path(app.userid)%>><%= app.name %></a></div>
      </div>
      <%end%>
    </div>
  
  </div>
</div>
  </header>

</div>

<script>
$(document).ready(function(){
$('.ui.radio.checkbox')
  .checkbox()
;
});

</script>