<header id="landing">
<div class="ui grid container">
    <div class="eight wide column">
          <div class="landing-page relative-position">
            <div class="ui center aligned container">
              <img src=<%=asset_path"otapp_Index.png"%> height="200px" alt="">
              <p class="semibold paragraph">OTapp is an online TESDA application system for aspiring students. The goal of this website is to aid people who would like to enroll to TESDA by making the application process more efficient through doing it online. Same quality of education for a less hassle application experience.</p>
            </div>
          </div>
        </div>
        <!--crucial!! data tabs of log in and sign up changed because of gray part-->
        <div class="eight wide column"  name="tab-menu">
          <div class="ui top attached tabular menu">
            <a class="item active" data-tab="first"><h3>Sign In</h3></a>
            <a class="item" data-tab="second" onClick="signUp()"><h3>Register</h3></a>
          </div>
          <div class="ui bottom attached tab segment active" data-tab="first">
            <%= form_tag(sessions_path, method: "post", class: "ui form") do %>
            <% flash.each do |key, value| %>
              <div class="ui negative message alert alert-<%= key %>"><%= value %></div>
              <% flash.clear %>
            <% end %>
          <!--     <div class="inline fields">
                <label for="fruit">Sign in as:</label>
                <div class="field">
                  <div class="ui radio checkbox">
                    <input type="radio" name="search" checked="" tabindex="0" class="hidden">
                    <label>Admin</label>
                  </div>
                </div>
                <div class="field">
                  <div class="ui radio checkbox">
                    <input type="radio" name="search" tabindex="0" class="hidden">
                    <label>Student</label>
                  </div>
                </div>
              </div> -->
              <div class="field">
                <%= label_tag(:"Email") %>
                <%= text_field_tag(:e_mail, "", placeholder: "johndoe@gmail.com") %>
              </div>
              <div class="field">
                <%= label_tag("Password") %>
                <%= password_field_tag(:password, "", placeholder: "password") %>
              </div>
              <%= button_tag("Sign in", class: "fluid ui green button pull-right", type: "submit") %>
            <% end %>
          </div>
          <div class="ui bottom attached tab segment" data-tab="second">
                  
              <div class="sign-up-form form-padding">
              <div class="fluid ui buttons">
  <button class="ui teal button"  onClick="signUpAdmin()">Admin</button>
  <div class="or"></div>
  <button class="ui blue button"  onClick="signUpStudent()">Student</button>
</div>
              </div>
              <div class="form-padding-signup" style="display: none;">
                <div class="signup-admin" style="display: none;">
                  <p style="text-align: right;">Admin</p>
                  <div class="ui form">
                      <div class="field">
                        <label>Full Name</label>
                        <input placeholder="John Doe" name="admin_name" type="text">
                      </div>
                      <div class="field">
                        <label>School Position</label>
                        <input placeholder="Principal" name="school_pos" type="text">
                      </div>
                      <div class="field">
                        <label>Username</label>
                        <input placeholder="johndoe" name="admin_username" maxlength="9" type="text">
                      </div>
                        <div class="field">
                        <label>Email</label>
                        <input placeholder="johndoe@gmail.com" name="admin_email" type="text">
                      </div>
                      <div class="field">
                        <label>Password</label>
                        <input placeholder="password" name="admin_password" id="AtxtPassword" type="password">
                      </div>
                      <div class="field">
                        <label>Confirm Password</label>
                        <input placeholder="password" name="admin_password" id="AtxtConfirmPassword" type="password">
                      </div>
                    <div class="center">
                      <button class="fluid ui blue button" onclick="return AdminValidate()">Create Account</button>
                    </div>
                  </div>
                </div>
                <div class="signup-student" style="display: none;">
                    <p style="text-align: right; ">Student
                    <div class="ui form">
                      <div class="fields">
                        <div class="ten wide field">
                          <div class="field">
                            <label>Full Name</label>
                            <input placeholder="John Doe" name="stud_name" type="text">
                          </div>
                        </div>
                        <div class="six wide field">
                          <div class="field">
                            <label>Birthdate</label>
                            <input placeholder="1997-10-18" name="stud_bday" type="text">
                          </div>
                        </div>
                      </div>
                      <div class="fields">
                        <div class="ten wide field">                      
                          <div class="field">
                            <label>Address</label>
                            <input placeholder="#30 Kalayaan Dormitory, Diliman, Quezon City" name="stud_address" type="text">
                          </div>
                        </div>
                        <div class="six wide field">
                          <div class="field">
                            <label>Civil Status</label>
                            <input placeholder="Single" name="stud_civil" type="text">
                          </div>
                        </div>
                      </div>
                      <div class="field">
                        <label>Username</label>
                        <input placeholder="johndoe" name="stud_username" maxlength="9" type="text">
                      </div>
                        <div class="field">
                        <label>Email</label>
                        <input placeholder="johndoe@gmail.com" name="stud_email" type="text">
                      </div>
                      <div class="field">
                        <label>Password</label>
                        <input placeholder="password" name="stud_password" id="txtPassword"  type="password">
                      </div>
                      <div class="field">
                        <label>Confirm Password</label>
                        <input placeholder="password" name="stud_password" id="txtConfirmPassword" type="password">
                      </div>
                      <div class="center">
                      <button class="fluid ui blue button" onclick="return UserValidate()">Create Account</button>
                    </div>
                </div>
              </div>
          
          </div>
        </div>
</header>
<script>
$(document).ready(function() {
  $('.menu .item').tab();
});
function signUpAdmin() {
  $('.signup-admin').css("display", "block");
  $('.signup-student').css("display", "none");
  $('.sign-up-form').css("display", "none");
  $('.form-padding-signup').css("display", "block");
}

function signUpStudent(){
  $('.signup-student').css("display", "block");
  $('.signup-admin').css("display", "none");
  $('.sign-up-form').css("display", "none");
  $('.form-padding-signup').css("display", "block"); 
}

function signUp(){
  $('.sign-up-form').css("display", "block");
  $('.signup-admin').css("display", "none");
  $('.signup-student').css("display", "none");
  $('.form-padding-signup').css("display", "none");
}
 function UserValidate() {
        var password = document.getElementById("txtPassword").value;
        var confirmPassword = document.getElementById("txtConfirmPassword").value;
        if (password != confirmPassword) {
            alert("Passwords do not match.");
            return false;
        }
        return true;
    }
 function AdminValidate() {
        var password = document.getElementById("AtxtPassword").value;
        var confirmPassword = document.getElementById("AtxtConfirmPassword").value;
        if (password != confirmPassword) {
            alert("Passwords do not match.");
            return false;
        }
        return true;
    }
</script>